<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/block_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/brown_block" />

        <ImageView
            android:id="@+id/block_small_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:src="@drawable/brown_block"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/sound_select"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="8dp"
            android:src="@drawable/ic_baseline_music_note_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/loop"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_baseline_loop_24"
            app:layout_constraintEnd_toStartOf="@id/sound_select"
            app:layout_constraintTop_toTopOf="@id/sound_select" />

        <ImageView
            android:id="@+id/loop_stop"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_close_24"
            app:layout_constraintBottom_toBottomOf="@id/loop"
            app:layout_constraintEnd_toEndOf="@id/loop"
            app:layout_constraintStart_toStartOf="@id/loop"
            app:layout_constraintTop_toTopOf="@id/loop" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>